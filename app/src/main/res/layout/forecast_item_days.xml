<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/constraint"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="today"
            android:layout_margin="5dp"
            android:fontFamily="@font/din_arabic_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:id="@+id/tv_date"
            android:textSize="18sp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintEnd_toStartOf="@id/iv_icon"
            android:textStyle="bold"
            tools:text="text"
            android:textSize="12sp"
            android:id="@+id/tv_temp_time"
            android:fontFamily="@font/din_arabic_regular"


            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="128 C"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/din_arabic_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_temp_time"
            app:layout_constraintStart_toStartOf="@id/tv_date"
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/tv_temp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Feels Like 12 C"
            android:fontFamily="@font/din_arabic_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_temp"
            app:layout_constraintStart_toStartOf="@id/tv_temp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:id="@+id/tv_feels_like"

            />



        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@drawable/ic_delete_new"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv_icon"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="clear"
            android:fontFamily="@font/din_arabic_regular"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_type_weather"

            />






    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>